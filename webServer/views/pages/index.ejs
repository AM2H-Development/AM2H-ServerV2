<!-- views/pages/index.ejs -->
<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head %>
</head>
<body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">

    <header class="mdl-layout__header">
        <% include ../partials/header %>
    </header>

    <% include ../partials/menu %>

      <!-- Content -->
      <main class="mdl-layout__content" >

        <!-- Layout Data Fields -->
        <section class="mdl-layout__tab-panel is-active" id="scroll-tab-1">
            <div id="contentlayer" class="page-content"> </div>
        </section>

        <!-- Diagram Layer -->
        <section class="mdl-layout__tab-panel" id="scroll-tab-2">
            <div id="diagramlayer">
                <div>Diagramm Header</div>
                <div style="position: relative; height:80vh; width:80vw">
                    <canvas id="myChart"></canvas>
                </div>
                
                <div id="buttons">
                    <div style="margin:10px;">
                    <button class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored mdl-button--mini-fab mdl-shadow--4dp mdl-color--accent" id="duration-button">
                        <i class="material-icons" role="presentation">sort</i>
                        <span class="visuallyhidden">Sort</span>
                    </button>

                    <ul id="chart-menu-duration" class="chart-menu mdl-menu mdl-menu--top-right mdl-js-menu mdl-js-ripple-effect" data-mdl-for="duration-button">
                    </ul>
                    </div>
                    <div style="margin:10px;">
                    <button class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored mdl-shadow--4dp mdl-color--accent" id="chart-button">
                        <i class="material-icons" role="presentation">show_chart</i>
                        <span class="visuallyhidden">Select Chart</span>
                    </button>

                    <ul id="chart-menu-graph" class="chart-menu mdl-menu mdl-menu--top-right mdl-js-menu mdl-js-ripple-effect" data-mdl-for="chart-button">
                    </ul>
                    </div>
                </div>

            </div>
        </section>

        <% include ../partials/detailcard %>
      </main>
    </div>
  </body>
</html>